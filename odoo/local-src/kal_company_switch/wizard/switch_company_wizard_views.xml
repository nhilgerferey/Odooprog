<odoo>
    <data>
        <record id="switch_company_wizard" model="ir.ui.view">
            <field name="name">switch.company.wizard.form</field>
            <field name="model">switch.company.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <field name="company_ids" />
                </form>
            </field>
        </record>

        <record id="switch_company_wizard_action" model="ir.actions.act_window">
            <field name="name">Switch Companies</field>
            <field name="res_model">switch.company.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
